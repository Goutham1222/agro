extends layout

block content
  h1 Nearby Shops

  // ✅ Show "Add Shop" button only for admin, no debug info
  if user && user.role === 'admin'
    .admin-actions
      a.add-shop-btn(href='/shops/add') ➕ Add New Shop

  // ✅ Display shops
  if shops && shops.length
    ul.shop-list
      each s in shops
        li.shop-item
          h3= s.name
          p Distance: #{s.distance} km
          p
            a(href=s.location, target="_blank") View Location
  else
    p No shops available in your area yet.
