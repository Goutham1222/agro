extends layout

block content
  h1 Add Shop

  form(action='/shops/add', method='POST')
    div
      label(for='name') Shop Name:
      input(type='text', id='name', name='name', required)
    br
    div
      label(for='location') Location (Map Link):
      input(type='text', id='location', name='location', required)
    br
    div
      label(for='distance') Distance (km):
      input(type='number', id='distance', name='distance', step="0.1", required)
    br
    button(type='submit') Add Shop