extends layout

block content
  .login-page
    .login-box
      h2 Add Shop
      form(action='/shops/add', method='POST')
        div
          label(for='name') Shop Name:
          input(type='text', id='name', name='name', required)
        br
        div
          label(for='location') Location (Map Link):
          input(type='text', id='location', name='location', required)
        br
        div
          label(for='distance') Distance :
          input(type='text', id='distance', name='distance', required)
        br
        button(type='submit') Add Shop
